# PARENT_TASK=PROJ-123

# Optional: Default component for new tasks
# DEFAULT_COMPONENT=Backend

# Optional: Default issue type
# ISSUE_TYPE=Task

# Optional: Default values (uncomment and set if needed)
# SUMMARY=
# DESCRIPTION=
# COMMENT=
# COMPONENTS=
# TRANSITION_NAME=
# LINK_TO_PARENT=false

