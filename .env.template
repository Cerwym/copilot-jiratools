# Jira Configuration Template
# Copy this file to .env and fill in your actual values

# Your Jira API Token (generate at: https://id.atlassian.com/manage-profile/security/api-tokens)
JIRA_API_TOKEN=your-api-token-here

# Your Jira email address
JIRA_USERNAME=your.email@company.com

# Your Jira instance URL
JIRA_URL=https://your-company.atlassian.net

# Default project key for creating tasks
JIRA_PROJECT_KEY=PROJECT

# Default component for tasks (optional)
JIRA_DEFAULT_COMPONENT=COMPONENT_NAME
